<%= form_for @contact do |f|%>
<% if @contact.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@contact.errors.count, "error") %>
			prohibited this contact from being saved:
		</h2>
		<ul>
			<% @contact.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<%end%>
		</ul>
	</div>
<%end%>


<p>
				<%= f.label :Name %><br>
				<%= f.text_field :Name%>
			</p>

			<p>
				<%= f.label :Number %><br>
				<%= f.text_field :Number %>
			</p>

			<p>
				<%= f.label :Email %><br>
				<%= f.text_field :Email %>
			</p>

			<p>
				<%= f.submit %>
			</p>

		<% end %>

